---
import fleur_droite from "../assets/fleur_droite.png";
import fleur_gauche from "../assets/fleur_gauche.png";
import TypingAnimation from "./TypingAnimation.astro";
---

<section
  id="hero"
  class="relative top-0 left-0 w-dvw h-screen flex items-center justify-center select-none"
  style="overflow: visible; min-height: 100vh; max-height: 100vh;"
>
  <!-- Fleur gauche -->
  <img
    src={fleur_gauche.src}
    alt="Fleur gauche"
    class="absolute left-0 top-0 w-[25vh] h-[30vh] md:w-[35vh] md:h-[40vh] lg:w-[25vw] lg:h-[30dvw] object-cover object-center opacity-100 z-10"
  />

  <!-- Ellipses colorées derrière la fleur gauche -->
  <!-- Ellipse bleu (en dessous) -->
  <div
    class="absolute rounded-full opacity-85 pointer-events-none ellipse-left-1"
    style="background: radial-gradient(ellipse at center, #3600c9 0%, transparent 55%); filter: blur(30px); z-index: 1; animation: float1 8s ease-in-out infinite;"
  >
  </div>

  <!-- Ellipse orange (au milieu) -->
  <div
    class="absolute rounded-full opacity-90 pointer-events-none ellipse-left-2"
    style="background: radial-gradient(ellipse at center, #fd772b 0%, transparent 55%); filter: blur(35px); z-index: 2; animation: float2 10s ease-in-out infinite;"
  >
  </div>

  <!-- Ellipse bleu supplémentaire (sous orange) -->
  <div
    class="absolute rounded-full opacity-80 pointer-events-none ellipse-left-3"
    style="background: radial-gradient(ellipse at center, #3600c9 0%, transparent 55%); filter: blur(30px); z-index: 1.5; animation: float3 9s ease-in-out infinite;"
  >
  </div>

  <!-- Ellipse rouge -->
  <div
    class="absolute rounded-full opacity-85 pointer-events-none ellipse-left-4"
    style="background: radial-gradient(ellipse at center, #cc1d48 0%, transparent 55%); filter: blur(30px); z-index: 3; animation: float4 11s ease-in-out infinite;"
  >
  </div>

  <!-- Ellipse bleu (par-dessus) -->
  <div
    class="absolute rounded-full opacity-80 pointer-events-none ellipse-left-5"
    style="background: radial-gradient(ellipse at center, #3600c9 0%, transparent 55%); filter: blur(25px); z-index: 4; animation: float5 8.5s ease-in-out infinite;"
  >
  </div>

  <!-- Ellipses colorées derrière la fleur droite -->
  <!-- Ellipse bleu (en dessous) -->
  <div
    class="absolute rounded-full opacity-85 pointer-events-none ellipse-right-1"
    style="background: radial-gradient(ellipse at center, #3600c9 0%, transparent 55%); filter: blur(30px); z-index: 1; animation: float6 9.5s ease-in-out infinite;"
  >
  </div>

  <!-- Ellipse orange (au milieu) -->
  <div
    class="absolute rounded-full opacity-90 pointer-events-none ellipse-right-2"
    style="background: radial-gradient(ellipse at center, #fd772b 0%, transparent 55%); filter: blur(35px); z-index: 2; animation: float7 11.5s ease-in-out infinite;"
  >
  </div>

  <!-- Ellipse bleu supplémentaire (sous orange) -->
  <div
    class="absolute rounded-full opacity-80 pointer-events-none ellipse-right-3"
    style="background: radial-gradient(ellipse at center, #3600c9 0%, transparent 55%); filter: blur(30px); z-index: 1.5; animation: float8 10.5s ease-in-out infinite;"
  >
  </div>

  <!-- Ellipse rouge -->
  <div
    class="absolute rounded-full opacity-85 pointer-events-none ellipse-right-4"
    style="background: radial-gradient(ellipse at center, #cc1d48 0%, transparent 55%); filter: blur(30px); z-index: 3; animation: float9 12s ease-in-out infinite;"
  >
  </div>

  <!-- Ellipse bleu (par-dessus) -->
  <div
    class="absolute rounded-full opacity-80 pointer-events-none ellipse-right-5"
    style="background: radial-gradient(ellipse at center, #3600c9 0%, transparent 55%); filter: blur(25px); z-index: 4; animation: float10 9s ease-in-out infinite;"
  >
  </div>

  <!-- Fleur droite -->
  <img
    src={fleur_droite.src}
    alt="Fleur droite"
    class="absolute right-0 bottom-0 w-[25vh] h-[30vh] md:w-[35vh] md:h-[45dvh] lg:w-[30dvw] lg:h-[37dvw] object-cover opacity-100 z-10"
  />

  <!-- Scroll indicator -->
  <a
    href="#a-propos"
    class="absolute bottom-4 md:bottom-6 lg:bottom-8 left-1/2 -translate-x-1/2 flex justify-center"
  >
    <div
      class="w-10 h-10 md:w-11 md:h-11 lg:w-12 lg:h-12 border-2 border-white rounded-full flex items-center justify-center animate-bounce"
    >
      <svg
        class="w-5 h-5 md:w-5.5 md:h-5.5 lg:w-6 lg:h-6 text-white"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </a>

  <!-- Contenu central -->
  <div
    class="relative z-10 text-center text-white flex flex-col items-center justify-center px-4 md:px-8 lg:px-0 lg:-mt-16"
  >
    <h1
      class="tracking-widest mb-4 main-title-font drop-shadow-figma mt-16 md:mt-32 lg:mt-64 text-[32px] md:text-[48px] lg:text-[60px]"
      style="font-weight: 200 !important;"
    >
      LORÉNA CHEVALLOT
    </h1>
    <div class="w-3/4 md:w-full h-px bg-white mb-8"></div>
    <p
      class="font-extralight tracking-wider mb-16 md:mb-32 lg:mb-64 lg:!text-[20px] !text-[16px] md:!text-[18px]"
    >
      PORTFOLIO
    </p>
    <p class="text-2xl font-light mb-8"></p>
    <div
      class="text-base md:text-xl lg:text-2xl font-light mb-16 -mt-8 md:-mt-16 lg:-mt-48"
    >
      JE SUIS... <span class="inline-block ml-2"
        ><TypingAnimation client:load /></span
      >
    </div>
  </div>
</section>


---
import fleur_droite from "../assets/fleur_droite.png";
import fleur_gauche from "../assets/fleur_gauche.png";
import TypingAnimation from "./TypingAnimation.astro";
---

<section
    class="fixed top-0 left-0 w-full h-screen overflow-visible flex items-center justify-center select-none"
>
    <!-- Fleur gauche -->
    <img
        src={fleur_gauche.src}
        alt="Fleur gauche"
        class="absolute left-0 top-0 w-[550px] h-[550px] object-cover opacity-100 z-10"
    />

    <!-- Ellipses colorées derrière la fleur gauche -->
    <!-- Ellipse bleu (en dessous) -->
    <div
        class="absolute rounded-full opacity-85 pointer-events-none"
        style="left: -350px; top: -200px; width: 950px; height: 950px; background: radial-gradient(ellipse at center, #3600c9 0%, transparent 55%); filter: blur(30px); z-index: 1; animation: float1 8s ease-in-out infinite;"
    >
    </div>

    <!-- Ellipse orange (au milieu) -->
    <div
        class="absolute rounded-full opacity-90 pointer-events-none"
        style="left: -300px; top: -350px; width: 1050px; height: 1050px; background: radial-gradient(ellipse at center, #fd772b 0%, transparent 55%); filter: blur(35px); z-index: 2; animation: float2 10s ease-in-out infinite;"
    >
    </div>

    <!-- Ellipse bleu supplémentaire (sous orange) -->
    <div
        class="absolute rounded-full opacity-80 pointer-events-none"
        style="left: -320px; top: -400px; width: 900px; height: 900px; background: radial-gradient(ellipse at center, #3600c9 0%, transparent 55%); filter: blur(30px); z-index: 1.5; animation: float3 9s ease-in-out infinite;"
    >
    </div>

    <!-- Ellipse rouge -->
    <div
        class="absolute rounded-full opacity-85 pointer-events-none"
        style="left: -250px; top: -50px; width: 900px; height: 900px; background: radial-gradient(ellipse at center, #cc1d48 0%, transparent 55%); filter: blur(30px); z-index: 3; animation: float4 11s ease-in-out infinite;"
    >
    </div>

    <!-- Ellipse bleu (par-dessus) -->
    <div
        class="absolute rounded-full opacity-80 pointer-events-none"
        style="left: -400px; top: 20px; width: 850px; height: 850px; background: radial-gradient(ellipse at center, #3600c9 0%, transparent 55%); filter: blur(25px); z-index: 4; animation: float5 8.5s ease-in-out infinite;"
    >
    </div>

    <!-- Ellipses colorées derrière la fleur droite -->
    <!-- Ellipse bleu (en dessous) -->
    <div
        class="absolute rounded-full opacity-85 pointer-events-none"
        style="right: -250px; bottom: -100px; width: 800px; height: 800px; background: radial-gradient(ellipse at center, #3600c9 0%, transparent 55%); filter: blur(30px); z-index: 1; animation: float6 9.5s ease-in-out infinite;"
    >
    </div>

    <!-- Ellipse orange (au milieu) -->
    <div
        class="absolute rounded-full opacity-90 pointer-events-none"
        style="right: -200px; bottom: -250px; width: 900px; height: 900px; background: radial-gradient(ellipse at center, #fd772b 0%, transparent 55%); filter: blur(35px); z-index: 2; animation: float7 11.5s ease-in-out infinite;"
    >
    </div>

    <!-- Ellipse bleu supplémentaire (sous orange) -->
    <div
        class="absolute rounded-full opacity-80 pointer-events-none"
        style="right: -220px; bottom: -300px; width: 750px; height: 750px; background: radial-gradient(ellipse at center, #3600c9 0%, transparent 55%); filter: blur(30px); z-index: 1.5; animation: float8 10.5s ease-in-out infinite;"
    >
    </div>

    <!-- Ellipse rouge -->
    <div
        class="absolute rounded-full opacity-85 pointer-events-none"
        style="right: -150px; bottom: 50px; width: 750px; height: 750px; background: radial-gradient(ellipse at center, #cc1d48 0%, transparent 55%); filter: blur(30px); z-index: 3; animation: float9 12s ease-in-out infinite;"
    >
    </div>

    <!-- Ellipse bleu (par-dessus) -->
    <div
        class="absolute rounded-full opacity-80 pointer-events-none"
        style="right: -250px; bottom: 150px; width: 700px; height: 700px; background: radial-gradient(ellipse at center, #3600c9 0%, transparent 55%); filter: blur(25px); z-index: 4; animation: float10 9s ease-in-out infinite;"
    >
    </div>

    <!-- Fleur droite -->
    <img
        src={fleur_droite.src}
        alt="Fleur droite"
        class="absolute right-0 bottom-0 w-[550px] h-[550px] object-cover opacity-100 z-10"
    />

    <!-- Scroll indicator -->
    <a
        href="#first"
        class="absolute bottom-8 left-1/2 -translate-x-1/2 flex justify-center"
    >
        <div
            class="w-12 h-12 border-2 border-white rounded-full flex items-center justify-center animate-bounce"
        >
            <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
        </div>
    </a>

    <!-- Contenu central -->
    <div
        class="relative z-10 text-center text-white flex flex-col items-center justify-center -mt-16"
    >
        <h1
            class="tracking-widest mb-4 main-title-font drop-shadow-figma mt-64"
            style="font-size: 60px !important; font-weight: 200 !important;"
        >
            LORÉNA CHEVALLOT
        </h1>
        <div class="w-full h-px bg-white mb-8"></div>
        <p
            class="ts-Corp font-extralight tracking-wider mb-64"
            style="font-size: 32px !important;"
        >
            PORTFOLIO
        </p>
        <p class="text-2xl font-light mb-8"></p>
        <div class="text-2xl font-light mb-16 -mt-48">
            JE SUIS... <span class="inline-block ml-2"
                ><TypingAnimation client:load /></span
            >
        </div>
    </div>
</section>

<style>
    section {
        position: relative;
    }

    .neon-text {
        text-shadow: 0 0 3px #ffffff;
    }

    .main-title-font {
        font-family: var(--fonts-main-title-home, "Cormorant Unicase"), serif;
    }

    /* Drop shadow Figma : X:0, Y:4, Blur:26.7, Spread:0, Color:#FFFFFF */
    .drop-shadow-figma {
        filter: drop-shadow(0px 0px 70px rgba(255, 255, 255, 0.9))
            drop-shadow(0px 0px 35px rgba(255, 255, 255, 0.8));
    }

    /* Animations pour les ellipses - mouvement organique et fluide */
    @keyframes float1 {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
        }
        25% {
            transform: translate(40px, -30px) scale(1.05);
        }
        50% {
            transform: translate(30px, 40px) scale(0.95);
        }
        75% {
            transform: translate(-30px, 15px) scale(1.03);
        }
    }

    @keyframes float2 {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
        }
        30% {
            transform: translate(-35px, 45px) scale(1.07);
        }
        60% {
            transform: translate(45px, -25px) scale(0.93);
        }
        85% {
            transform: translate(-25px, -35px) scale(1.05);
        }
    }

    @keyframes float3 {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
        }
        20% {
            transform: translate(30px, 35px) scale(0.96);
        }
        55% {
            transform: translate(-40px, -30px) scale(1.04);
        }
        80% {
            transform: translate(35px, -40px) scale(1.06);
        }
    }

    @keyframes float4 {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
        }
        35% {
            transform: translate(-45px, -35px) scale(1.04);
        }
        65% {
            transform: translate(25px, 40px) scale(0.95);
        }
        90% {
            transform: translate(40px, -25px) scale(1.08);
        }
    }

    @keyframes float5 {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
        }
        28% {
            transform: translate(50px, 30px) scale(1.06);
        }
        58% {
            transform: translate(-30px, -45px) scale(0.94);
        }
        82% {
            transform: translate(20px, 35px) scale(1.04);
        }
    }

    @keyframes float6 {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
        }
        22% {
            transform: translate(-40px, 40px) scale(1.08);
        }
        52% {
            transform: translate(45px, -35px) scale(0.92);
        }
        78% {
            transform: translate(-25px, 25px) scale(1.05);
        }
    }

    @keyframes float7 {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
        }
        32% {
            transform: translate(35px, -40px) scale(0.96);
        }
        62% {
            transform: translate(-45px, 30px) scale(1.06);
        }
        88% {
            transform: translate(30px, 45px) scale(1.04);
        }
    }

    @keyframes float8 {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
        }
        26% {
            transform: translate(-35px, -30px) scale(1.05);
        }
        56% {
            transform: translate(40px, 45px) scale(0.94);
        }
        84% {
            transform: translate(-45px, -40px) scale(1.08);
        }
    }

    @keyframes float9 {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
        }
        24% {
            transform: translate(45px, 25px) scale(1.06);
        }
        54% {
            transform: translate(-30px, 40px) scale(0.95);
        }
        80% {
            transform: translate(35px, -35px) scale(1.04);
        }
    }

    @keyframes float10 {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
        }
        30% {
            transform: translate(-50px, 35px) scale(0.93);
        }
        60% {
            transform: translate(30px, -45px) scale(1.08);
        }
        86% {
            transform: translate(40px, 30px) scale(1.05);
        }
    }
</style>

<section id="propos" class="min-h-screen text-white pt-20 px-8">
    <div class="neon-bar-container">
        <div class="neon-bar"></div>
    </div>
    <div class="max-w-6xl mx-auto relative z-10">
        <h2 class="text-4xl font-light mb-12 text-center">À Propos</h2>
        <div class="text-lg leading-relaxed">
            <p class="mb-6">Contenu à personnaliser...</p>
        </div>
    </div>
</section>

<style>
    section {
        position: relative;
        background-color: transparent;
    }

    .neon-bar-container {
        position: absolute;
        top: 55%;
        left: 20%;
        transform: translate(-50%, -50%);
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        pointer-events: none;
        z-index: 1;
    }

    .neon-bar {
        width: 8px;
        height: 80%;
        background: linear-gradient(
            to right,
            transparent,
            rgba(255, 255, 255, 0.9) 45%,
            #ffffff 50%,
            rgba(255, 255, 255, 0.9) 55%,
            transparent
        );
        position: relative;
        border-radius: 4px;

        /* Effet néon principal */
        box-shadow: 
            /* Halo intérieur blanc */
            inset 0 0 10px rgba(255, 255, 255, 0.9),
            inset 0 0 20px rgba(255, 255, 255, 0.6),
            /* Première couche de lueur bleue */ 0 0 10px #3600c9,
            0 0 20px #3600c9,
            0 0 30px #3600c9,
            0 0 40px #3600c9,
            /* Deuxième couche plus diffuse */ 0 0 60px rgba(54, 0, 201, 0.8),
            0 0 80px rgba(54, 0, 201, 0.6),
            0 0 100px rgba(54, 0, 201, 0.4),
            /* Halo très diffus */ 0 0 140px rgba(54, 0, 201, 0.3),
            0 0 180px rgba(54, 0, 201, 0.2);

        animation: neon-pulse 2s ease-in-out infinite alternate;
    }

    /* Animation de pulsation pour un effet plus réaliste */
    @keyframes neon-pulse {
        0% {
            box-shadow:
                inset 0 0 10px rgba(255, 255, 255, 0.9),
                inset 0 0 20px rgba(255, 255, 255, 0.6),
                0 0 10px #3600c9,
                0 0 20px #3600c9,
                0 0 30px #3600c9,
                0 0 40px #3600c9,
                0 0 60px rgba(54, 0, 201, 0.8),
                0 0 80px rgba(54, 0, 201, 0.6),
                0 0 100px rgba(54, 0, 201, 0.4),
                0 0 140px rgba(54, 0, 201, 0.3),
                0 0 180px rgba(54, 0, 201, 0.2);
        }
        100% {
            box-shadow:
                inset 0 0 12px rgba(255, 255, 255, 1),
                inset 0 0 24px rgba(255, 255, 255, 0.7),
                0 0 15px #3600c9,
                0 0 25px #3600c9,
                0 0 35px #3600c9,
                0 0 50px #3600c9,
                0 0 70px rgba(54, 0, 201, 0.9),
                0 0 90px rgba(54, 0, 201, 0.7),
                0 0 120px rgba(54, 0, 201, 0.5),
                0 0 160px rgba(54, 0, 201, 0.4),
                0 0 200px rgba(54, 0, 201, 0.3);
        }
    }
</style>

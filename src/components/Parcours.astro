<style>
    /* Ligne décorative mobile */
    .decorative-line-mobile {
        display: block !important;
        width: 100% !important;
        max-width: none !important;
        height: 2px !important;
        background: #ffffff !important;
        box-shadow:
            0 0 10px rgba(255, 255, 255, 0.8),
            0 0 20px rgba(255, 255, 255, 0.6),
            0 0 30px rgba(255, 255, 255, 0.4) !important;
        margin: 0 auto 24px auto !important;
    }

    @media (min-width: 1024px) {
        .decorative-line-mobile {
            display: none !important;
        }
    }

    /* Animation hover sur les points */
    .relative:has(.rounded-full.bg-black):hover .absolute.opacity-100 {
        filter: blur(20px);
    }

    /* Animations de la timeline */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes drawLine {
        from {
            height: 0;
        }
        to {
            height: 100%;
        }
    }

    @keyframes drawLineHorizontal {
        from {
            width: 0;
        }
        to {
            width: 100%;
        }
    }

    @keyframes scaleIn {
        from {
            opacity: 0;
            transform: scale(0);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @keyframes glowPulse {
        0%,
        100% {
            filter: blur(15px);
        }
        50% {
            filter: blur(20px);
        }
    }

    /* États initiaux avant animation */
    .timeline-item {
        opacity: 0;
    }

    .timeline-point {
        opacity: 0;
    }

    .timeline-line {
        height: 0;
    }

    /* Application des animations quand visible */
    .timeline-item.animate-in {
        animation: fadeInUp 0.8s ease-out forwards;
    }

    .timeline-item.animate-in:nth-child(1) {
        animation-delay: 0s;
    }
    .timeline-item.animate-in:nth-child(2) {
        animation-delay: 0.2s;
    }
    .timeline-item.animate-in:nth-child(3) {
        animation-delay: 0.4s;
    }
    .timeline-item.animate-in:nth-child(4) {
        animation-delay: 0.6s;
    }
    .timeline-item.animate-in:nth-child(5) {
        animation-delay: 0.8s;
    }

    .timeline-line.animate-in {
        animation: drawLine 0.8s ease-out forwards;
    }

    .timeline-point.animate-in {
        animation: scaleIn 0.5s ease-out forwards;
    }

    .timeline-glow {
        animation: glowPulse 2s ease-in-out infinite;
    }

    /* Application des animations - Desktop */
    @media (min-width: 1024px) {
        .timeline-horizontal-line {
            width: 0;
        }

        .timeline-horizontal-line.animate-in {
            animation: drawLineHorizontal 1.2s ease-out forwards;
        }

        .timeline-vertical-desktop {
            opacity: 0;
        }

        .timeline-vertical-desktop.animate-in {
            animation: fadeInUp 0.8s ease-out forwards;
        }

        /* 2023 et 2025 s'animent après la ligne horizontale, 2024 après */
        .timeline-vertical-desktop:nth-child(1).animate-in {
            animation-delay: 1.3s;
        }
        .timeline-vertical-desktop:nth-child(2).animate-in {
            animation-delay: 1.3s;
        }
    }

    /* Animation spécifique pour le 2024 qui est dans une structure différente */
    .timeline-vertical-desktop:not(.flex-row).animate-in {
        animation-delay: 1.6s;
    }
</style>

<script>
    // Observer pour déclencher les animations au scroll
    document.addEventListener("DOMContentLoaded", () => {
        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        // Ajouter la classe animate-in à l'élément et ses enfants
                        entry.target.classList.add("animate-in");

                        // Animer aussi les lignes et points à l'intérieur
                        const lines =
                            entry.target.querySelectorAll(".timeline-line");
                        const points =
                            entry.target.querySelectorAll(".timeline-point");

                        lines.forEach((line) =>
                            line.classList.add("animate-in"),
                        );
                        points.forEach((point) =>
                            point.classList.add("animate-in"),
                        );

                        // Ne plus observer une fois animé
                        observer.unobserve(entry.target);
                    }
                });
            },
            {
                threshold: 0.2,
                rootMargin: "0px",
            },
        );

        // Observer tous les éléments de la timeline
        const timelineItems = document.querySelectorAll(".timeline-item");
        const desktopElements = document.querySelectorAll(
            ".timeline-vertical-desktop, .timeline-horizontal-line",
        );

        timelineItems.forEach((el) => observer.observe(el));
        desktopElements.forEach((el) => observer.observe(el));

        // Observer aussi la section parcours pour animer les points desktop
        const desktopTimeline = document.querySelector(
            "#parcours .hidden.lg\\:block",
        );
        if (desktopTimeline) {
            observer.observe(desktopTimeline);
            desktopTimeline.addEventListener(
                "animationstart",
                () => {
                    const points =
                        desktopTimeline.querySelectorAll(".timeline-point");
                    points.forEach((point, index) => {
                        setTimeout(() => {
                            point.classList.add("animate-in");
                        }, index * 200);
                    });
                },
                { once: true },
            );
        }
    });
</script>

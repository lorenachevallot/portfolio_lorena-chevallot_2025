<section
    id="parcours"
    class="lg:min-h-screen relative text-white py-12 lg:py-20"
>
    <div class="w-full">
        <!-- Container global -->
        <div
            class="relative w-full flex flex-col items-start md:items-center lg:items-center py-8 lg:py-16"
        >
            <!-- Frise verticale mobile/tablette -->
            <div class="w-full px-4 md:px-16 lg:hidden mt-8 md:mt-16">
                <!-- Grande div conteneur en flex-col -->
                <div class="flex flex-col md:max-w-md md:mx-auto">
                    <!-- Barre de continuation en haut -->
                    <div class="flex flex-row gap-2 items-start">
                        <!-- Espace pour date -->
                        <div class="w-20"></div>
                        <!-- Barre verticale de continuation -->
                        <div class="flex flex-col items-center shrink-0">
                            <div class="w-0.5 h-24 md:h-32 bg-white"></div>
                        </div>
                    </div>

                    <!-- 2023 -->
                    <div class="flex flex-row gap-2 items-center">
                        <!-- Date à gauche -->
                        <div class="shrink-0 w-20">
                            <h3 class="font-bold">2023</h3>
                        </div>
                        <!-- Div avec barre verticale et point -->
                        <div
                            class="relative flex flex-col items-center shrink-0"
                        >
                            <!-- Barre verticale du haut -->
                            <div class="w-0.5 h-32 md:h-40 bg-white"></div>
                            <!-- Point avec effet néon (par-dessus la barre) -->
                            <div
                                class="absolute top-1/2 -translate-y-1/2 flex items-center justify-center z-10"
                            >
                                <!-- Sphère néon en arrière-plan -->
                                <div
                                    class="absolute w-12 h-12 rounded-full opacity-100 pointer-events-none"
                                    style="background: radial-gradient(circle at center, #8a2be2 0%, transparent 250%); filter: blur(18px);"
                                >
                                </div>
                                <!-- Point noir avec bordure -->
                                <div
                                    class="relative w-6 h-6 rounded-full bg-black border-2 border-[#f8f8f8]"
                                >
                                </div>
                            </div>
                            <!-- Barre verticale du bas -->
                            <div class="w-0.5 h-32 md:h-40 bg-white"></div>
                        </div>
                        <!-- Texte à droite -->
                        <div class="flex-1 ml-8">
                            <p>
                                Obtention du certificat d'Aptitude<br />
                                Théorique de Télépilote de drone
                            </p>
                        </div>
                    </div>

                    <!-- 2024 -->
                    <div class="flex flex-row gap-2 items-center">
                        <!-- Date à gauche -->
                        <div class="shrink-0 w-20">
                            <h3 class="font-bold">2024</h3>
                        </div>
                        <!-- Div avec barre verticale et point -->
                        <div
                            class="relative flex flex-col items-center shrink-0"
                        >
                            <!-- Barre verticale du haut -->
                            <div class="w-0.5 h-32 md:h-40 bg-white"></div>
                            <!-- Point avec effet néon (par-dessus la barre) -->
                            <div
                                class="absolute top-1/2 -translate-y-1/2 flex items-center justify-center z-10"
                            >
                                <!-- Sphère néon en arrière-plan -->
                                <div
                                    class="absolute w-12 h-12 rounded-full opacity-100 pointer-events-none"
                                    style="background: radial-gradient(circle at center, #8a2be2 0%, transparent 250%); filter: blur(18px);"
                                >
                                </div>
                                <!-- Point noir avec bordure -->
                                <div
                                    class="relative w-6 h-6 rounded-full bg-black border-2 border-[#f8f8f8]"
                                >
                                </div>
                            </div>
                            <!-- Barre verticale du bas -->
                            <div class="w-0.5 h-32 md:h-40 bg-white"></div>
                        </div>
                        <!-- Texte à droite -->
                        <div class="flex-1 ml-8">
                            <p>
                                Baccalauréat général (mention B)<br />
                                Spécialités : Sciences éco & cinéma audiovisuel
                            </p>
                        </div>
                    </div>

                    <!-- 2025 -->
                    <div class="flex flex-row gap-2 items-center">
                        <!-- Date à gauche -->
                        <div class="shrink-0 w-20">
                            <h3 class="font-bold">2025</h3>
                        </div>
                        <!-- Div avec barre verticale et point -->
                        <div
                            class="relative flex flex-col items-center shrink-0"
                        >
                            <!-- Barre verticale du haut -->
                            <div class="w-0.5 h-32 md:h-40 bg-white"></div>
                            <!-- Point avec effet néon (par-dessus la barre) -->
                            <div
                                class="absolute top-1/2 -translate-y-1/2 flex items-center justify-center z-10"
                            >
                                <!-- Sphère néon en arrière-plan -->
                                <div
                                    class="absolute w-12 h-12 rounded-full opacity-100 pointer-events-none"
                                    style="background: radial-gradient(circle at center, #8a2be2 0%, transparent 250%); filter: blur(18px);"
                                >
                                </div>
                                <!-- Point noir avec bordure -->
                                <div
                                    class="relative w-6 h-6 rounded-full bg-black border-2 border-[#f8f8f8]"
                                >
                                </div>
                            </div>
                            <!-- Barre verticale du bas -->
                            <div class="w-0.5 h-32 md:h-40 bg-white"></div>
                        </div>
                        <!-- Texte à droite -->
                        <div class="flex-1 ml-8">
                            <p>
                                Formation 1ère année BUT MMI,<br />
                                IUT Nord Franche - Comté<br />
                                Université Marie & Louis Pasteur
                            </p>
                        </div>
                    </div>

                    <!-- Barre de continuation en bas -->
                    <div class="flex flex-row gap-2 items-start">
                        <!-- Espace pour date -->
                        <div class="w-20"></div>
                        <!-- Barre verticale de continuation -->
                        <div class="flex flex-col items-center shrink-0">
                            <div class="w-0.5 h-24 md:h-32 bg-white"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Frise horizontale desktop (lg et plus) -->
            <div class="hidden lg:block w-full">
                <!-- Ligne avec 2 dates au-dessus (2023 et 2025) -->
                <div
                    class="flex flex-row justify-between items-start w-full mb-[-12px] relative z-10 px-32"
                >
                    <!-- 2023 -->
                    <div class="flex flex-row justify-start items-start">
                        <!-- Barre verticale avec points -->
                        <div
                            class="relative flex flex-col items-center h-[25dvh]"
                        >
                            <!-- Point blanc en haut -->
                            <div
                                class="w-4 h-4 rounded-full bg-white border-2 border-white"
                            >
                            </div>
                            <!-- Barre verticale -->
                            <div class="w-1 flex-1 bg-white"></div>
                            <!-- Point bleu en bas -->
                            <div
                                class="relative flex items-center justify-center"
                            >
                                <!-- Sphère néon en arrière-plan -->
                                <div
                                    class="absolute w-12 h-12 rounded-full opacity-100 pointer-events-none"
                                    style="background: radial-gradient(circle at center, #8a2be2 0%, transparent 250%); filter: blur(15px);"
                                >
                                </div>
                                <!-- Point noir avec bordure -->
                                <div
                                    class="relative w-6 h-6 rounded-full bg-black border-2 border-[#f8f8f8]"
                                >
                                </div>
                            </div>
                        </div>
                        <!-- Texte -->
                        <div class="ml-4">
                            <h3 class="font-bold mb-3 whitespace-nowrap">
                                2023
                            </h3>
                            <p class="whitespace-nowrap">
                                Obtention du certificat d'Aptitude<br />
                                Théorique de Télépilote de drone
                            </p>
                        </div>
                    </div>

                    <!-- 2025 -->
                    <div class="flex flex-row justify-end items-start">
                        <!-- Barre verticale avec points -->
                        <div
                            class="relative flex flex-col items-center h-[25dvh]"
                        >
                            <!-- Point blanc en haut -->
                            <div
                                class="w-4 h-4 rounded-full bg-white border-2 border-white"
                            >
                            </div>
                            <!-- Barre verticale -->
                            <div class="w-1 flex-1 bg-white"></div>
                            <!-- Point bleu en bas -->
                            <div
                                class="relative flex items-center justify-center"
                            >
                                <!-- Sphère néon en arrière-plan -->
                                <div
                                    class="absolute w-12 h-12 rounded-full opacity-100 pointer-events-none"
                                    style="background: radial-gradient(circle at center, #8a2be2 0%, transparent 250%); filter: blur(15px);"
                                >
                                </div>
                                <!-- Point noir avec bordure -->
                                <div
                                    class="relative w-6 h-6 rounded-full bg-black border-2 border-[#f8f8f8]"
                                >
                                </div>
                            </div>
                        </div>
                        <!-- Texte à droite -->
                        <div class="ml-4 text-left">
                            <h3 class="font-bold mb-3 whitespace-nowrap">
                                2025
                            </h3>
                            <p class="whitespace-nowrap">
                                Formation 1ère année BUT MMI,<br />
                                IUT Nord Franche - Comté<br />
                                Université Marie & Louis Pasteur
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Barre horizontale longue -->
                <div class="w-full h-0.5 bg-white relative"></div>

                <!-- 2024 en dessous au centre -->
                <div
                    class="flex flex-row justify-center items-end mt-[-12px] relative z-10 px-32"
                >
                    <div class="flex flex-row justify-start items-end">
                        <!-- Barre verticale avec points (inversée) -->
                        <div
                            class="relative flex flex-col items-center h-[25dvh]"
                        >
                            <!-- Point bleu en haut -->
                            <div
                                class="relative flex items-center justify-center"
                            >
                                <!-- Sphère néon en arrière-plan -->
                                <div
                                    class="absolute w-12 h-12 rounded-full opacity-100 pointer-events-none"
                                    style="background: radial-gradient(circle at center, #8a2be2 0%, transparent 250%); filter: blur(15px);"
                                >
                                </div>
                                <!-- Point noir avec bordure -->
                                <div
                                    class="relative w-6 h-6 rounded-full bg-black border-2 border-[#f8f8f8]"
                                >
                                </div>
                            </div>
                            <!-- Barre verticale -->
                            <div class="w-1 flex-1 bg-white"></div>
                            <!-- Point blanc en bas -->
                            <div
                                class="w-4 h-4 rounded-full bg-white border-2 border-white"
                            >
                            </div>
                        </div>
                        <!-- Texte -->
                        <div class="ml-4">
                            <h3 class="font-bold mb-3 whitespace-nowrap">
                                2024
                            </h3>
                            <p class="whitespace-nowrap">
                                Baccalauréat général (mention B)<br />
                                Spécialités : Sciences éco & cinéma audiovisuel
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Animation hover sur les points */
    .relative:has(.rounded-full.bg-black):hover .absolute.opacity-100 {
        filter: blur(20px);
    }
</style>

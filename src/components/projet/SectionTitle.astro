---
interface Props {
    title: string;
    size?: "large" | "medium";
    withLine?: boolean;
}

const { title, size = "large", withLine = true } = Astro.props;
const fontSize = size === "large" ? "1.875rem" : "1.5rem";
---

<h2
    class="font-bold mb-3"
    style={`font-family: 'Raleway', sans-serif !important; font-weight: 700 !important; font-size: ${fontSize} !important;`}
>
    {title}
</h2>
{
    withLine && (
        <div
            class="h-0.5 bg-white mb-8 w-full"
            style="box-shadow: 0 0 10px rgba(255, 255, 255, 0.8), 0 0 20px rgba(255, 255, 255, 0.6);"
        />
    )
}

    }

    /* Gestion des états des champs */
    input.filled,
    textarea.filled ~ .textarea-border {
        border-color: #000 !important;
    }
</style>

<script>
    // Gestion des états des inputs
    const inputs = document.querySelectorAll(
        'input[type="text"], input[type="email"]',
    );
    const textarea = document.querySelector("textarea");
    const textareaBorder = document.querySelector(".textarea-border");

    // Fonction pour vérifier si un champ est rempli
    function checkFilled(input: HTMLInputElement | HTMLTextAreaElement) {
        if (input.value.trim() !== "") {
            input.classList.add("filled");
            // Changer la bordure en noir
            input.style.borderColor = "#000";
        } else {
            input.classList.remove("filled");
            // Retourner en gris si vide et pas en focus
            if (document.activeElement !== input) {
                input.style.borderColor = "#9ca3af";
            }
        }
    }

    // Pour les inputs normaux
    inputs.forEach((input) => {
        const inputEl = input as HTMLInputElement;

        // Au focus : passer en noir
        inputEl.addEventListener("focus", () => {
            inputEl.style.borderColor = "#000";
        });

        // Au blur : vérifier si rempli
        inputEl.addEventListener("blur", () => {
            checkFilled(inputEl);
        });

        // À chaque saisie
        inputEl.addEventListener("input", () => {
            checkFilled(inputEl);
        });
    });

    // Pour le textarea
    if (textarea && textareaBorder) {
        textarea.addEventListener("focus", () => {
            (textareaBorder as HTMLElement).style.borderColor = "#000";
        });

        textarea.addEventListener("blur", () => {
            if (textarea.value.trim() !== "") {
                textarea.classList.add("filled");
                (textareaBorder as HTMLElement).style.borderColor = "#000";
            } else {
                textarea.classList.remove("filled");
                (textareaBorder as HTMLElement).style.borderColor = "#9ca3af";
            }
        });

        textarea.addEventListener("input", () => {
            if (textarea.value.trim() !== "") {
                textarea.classList.add("filled");
                (textareaBorder as HTMLElement).style.borderColor = "#000";
            } else {
                textarea.classList.remove("filled");
                if (document.activeElement !== textarea) {
                    (textareaBorder as HTMLElement).style.borderColor =
                        "#9ca3af";
                }
            }
        });
    }

    // Gestion du copier-coller de l'email
    const emailBtn = document.getElementById("email-copy-btn");
    if (emailBtn) {
        const originalText = emailBtn.textContent || "";

        emailBtn.addEventListener("click", async () => {
            try {
                await navigator.clipboard.writeText(
                    "lorena.chevallot@orange.fr",
                );
                emailBtn.textContent = "Copié !";

                setTimeout(() => {
                    emailBtn.textContent = originalText;
                }, 1500);
            } catch (err) {
                console.error("Erreur lors de la copie:", err);
            }
        });
    }

    // Gestion du copier-coller du téléphone
    const phoneBtn = document.getElementById("phone-copy-btn");
    if (phoneBtn) {
        const originalText = phoneBtn.textContent || "";

        phoneBtn.addEventListener("click", async () => {
            try {
                await navigator.clipboard.writeText("0649238383");
                phoneBtn.textContent = "Copié !";

                setTimeout(() => {
                    phoneBtn.textContent = originalText;
                }, 1500);
            } catch (err) {
                console.error("Erreur lors de la copie:", err);
            }
        });
    }

    // Gestion du formulaire de contact avec Formspree
    const contactForm = document.getElementById(
        "contact-form",
    ) as HTMLFormElement | null;
    const formMessage = document.getElementById("form-message");
    const submitBtn = document.getElementById("submit-btn");

    if (contactForm && formMessage) {
        contactForm.addEventListener("submit", async (e) => {
            e.preventDefault();

            // Créer les données du formulaire
            const formData = new FormData(contactForm);

            try {
                // Envoyer à Formspree
                const response = await fetch(
                    "https://formspree.io/f/xanvprdg",
                    {
                        method: "POST",
                        body: formData,
                        headers: {
                            Accept: "application/json",
                        },
                    },
                );

                if (response.ok) {
                    // Succès
                    formMessage.textContent = "✅ Message envoyé avec succès !";
                    formMessage.className =
                        "p-4 rounded-lg text-center font-bold bg-green-100 text-green-700";
                    formMessage.classList.remove("hidden");

                    // Réinitialiser le formulaire
                    contactForm.reset();

                    // Masquer le message après 5 secondes
                    setTimeout(() => {
                        formMessage.classList.add("hidden");
                    }, 5000);
                } else {
                    // Erreur
                    formMessage.textContent =
                        "❌ Erreur lors de l'envoi. Veuillez réessayer.";
                    formMessage.className =
                        "p-4 rounded-lg text-center font-bold bg-red-100 text-red-700";
                    formMessage.classList.remove("hidden");
                }
            } catch (error) {
                console.error("Erreur:", error);
                formMessage.textContent =
                    "❌ Erreur lors de l'envoi. Veuillez réessayer.";
                formMessage.className =
